@model IEnumerable<Movie>


<div class="container m-2">
    <div class="row">
        <div class="col-6">Hey</div>
        <div class="col-6">
            <h6 class="bg-secondary text-white text-center p-2">Movies</h6>
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>MPAA</th>
                    </tr>
                </thead>

                @foreach (var movie in Model)
                {
                    <tbody>
                        <tr>
                            <td>@movie.Title</td>
                            <td>@movie.Genre?.Name</td>
                            <td>@movie.Mpaa?.Title</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>

