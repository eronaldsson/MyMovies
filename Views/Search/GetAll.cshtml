@model IEnumerable<Movie>

<div class="container m-2">
    <div class="row">
        <div class="col-6">Hey</div>
        <div class="col-6">
            <h6 class="bg-secondary text-white text-center p-2">Movies</h6>
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                        <th id="title">Title</th>
                        <th>Genre</th>
                        <th>MPAA</th>
                    </tr>
                </thead>

                @foreach (var movie in Model)
                {
                    <tbody>
                        <tr class="test">
                            <td>@movie.Title</td>
                            <td>@movie.Genre?.Name</td>
                            <td>@movie.Mpaa?.Title</td>
                            <td><button type="button" class="btn btn-primary infoclick">Info</button></td>
                        </tr>
                        <tr class="moreinfo">
                            <td>This is more info</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>


<script src="/lib/jquery/jquery.js"></script>

<script>
    $(document).ready(function(){
        $(".moreinfo").hide();
        $(".infoclick").click(function(){
            $(this).parent().parent().siblings().toggle();
        })
    });
</script>