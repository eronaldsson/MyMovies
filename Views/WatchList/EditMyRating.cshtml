@model WatchListMovies

@{
    int? isRated = Model?.Rating == null ? 1 : Model.Rating;
}

    <div class="container-fluid m-2">
        <div class="row">
            <div class="col-lg-6 offset-3">
                <h1 class="text-center">Edit rating</h1>
                <form asp-action="EditMyRating" method="post">
                    <input type="hidden" asp-for="@Model.WatchListId" />
                    <input type="hidden" asp-for="@Model.MovieId" />
                    <div class="form-group">
                        <select class="form-select" asp-for="Rating">
                            <option value="@isRated" selected hidden>@isRated</option>
                            @for (int i = 1; i < 11; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="text-center mt-2">
                        <input class="btn btn-lg btn-primary" type="submit" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
